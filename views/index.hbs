<!DOCTYPE html>
<html>

<head>
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>OOXX-{{pageId}}</title>
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/css/materialize.min.css" media="screen,projection" />
    <link type="text/css" rel="stylesheet" href="/css/style.css" media="screen,projection" />
    <link type="text/css" rel="stylesheet" href="/css/animate.css" media="screen,projection" />
</head>
<body>
  <ul class="pagination">
    {{#each pageTurning}}
      <li class="{{className}}"><a href="{{url}}">{{index}}</a></li>
    {{/each}}
  </ul>
    <div id="container">
        <div id="content">
          {{#each list}}
              <ul>
              {{#each this}}
                  <li data-index="{{index}}">
                      <img src="{{url}}" >
                      <p>{{text}}</p>
                  </li>
              {{/each}}
              </ul>
          {{/each}}
        </div>
    </div>
    <ul class="pagination">
      {{#each pageTurning}}
        <li class="{{className}}"><a href="{{url}}">{{index}}</a></li>
      {{/each}}
    </ul>
    <div id="popWindow">
        <div id="imgArea">
            <div class="c-wrap">
                <div class="c-inner"><img></div>
            </div>
        </div>
        <div id="contextmenu">
            <div class="menu-item" id="prev">上一张</div>
            <div class="menu-item" id="next">下一张</div>
            <div class="menu-item" id="closer">关闭</div>
        </div>
    </div>

    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" data-main="app" src="/lib/require.js"></script>
    <script type="text/javascript">
    require.config({
        "baseUrl": "/js",
        "paths": {
            'react': '../lib/react.min',
            'jquery': '../lib/jquery-2.1.1.min'
        }
    })
    //require(['app'])
    </script>
</body>

</html>
